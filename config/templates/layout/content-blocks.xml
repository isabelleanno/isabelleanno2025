  xsi:schemaLocation="http://schemas.sulu.io/template/template http://schemas.sulu.io/template/template-1.0.xsd"
>
    <properties>
        <section name="content_blocks">
            <meta>
                <title lang="en">Content blocks</title>
            </meta>
            <properties>
                <block name="content_blocks" default-type="text">
                    <types>
                        <type name="text">
                            <meta>
                                <title lang="en">Text</title>
                            </meta>
                            <properties>
                                <xi:include
                                href="./../content-blocks/text.xml"
                                xpointer="xmlns(sulu=http://schemas.sulu.io/template/template) xpointer(/sulu:template/sulu:properties/sulu:*)"
                                />
